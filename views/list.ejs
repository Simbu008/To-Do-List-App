<%- include("header") -%>

<div class="box" id="heading">
  <h1><%= listTitle %></h1>
</div>

<div class="box">
  <% newlistItems.forEach(item=>{ %>
  <form action="/delete" method="post">
    <div class="item">
      <input
        type="checkbox"
        name="checkbox"
        value="<%= item._id %>"
        onchange="this.form.submit()"
      />
      <p><%= item.itemName %></p>
    </div>
  </form>
  <% }) %>

  <form class="item" action="/" method="post">
    <input
      type="text"
      name="newItem"
      placeholder="New Item"
      value=""
      autocomplete="off"
    />

    <button type="submit">+</button>
  </form>
</div>

<%- include("footer") -%>
